    <div class="relative flex min-h-screen flex-col">
      <Header quoteHref="#quote" />

      <main class="relative z-10 flex-1">
        <section class="section sm:min-h-screen flex items-start pt-4 pb-4 sm:items-center sm:pt-8 sm:pb-8 lg:pt-10 lg:pb-10">
