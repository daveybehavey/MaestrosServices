---
import Layout from "../components/Layout.astro";
import { business } from "../data/business";
import { projectProfiles } from "../data/projects";
import { createBreadcrumbSchema } from "../lib/schema";

const pageTitle = "Landscaping Project Profiles | Maestros Services";
const metaDescription =
  "Explore landscaping project profiles from Maestros Services, including driveway grading, gravel driveway refreshes, overgrowth clearing, and curb-appeal upgrades across lower-mid Vancouver Island.";
const canonicalUrl = `${business.siteUrl}${Astro.url.pathname}`;
const breadcrumbItems = [{ name: "Projects", href: "/projects" }];

const structuredData = [
  createBreadcrumbSchema(breadcrumbItems),
  {
    "@context": "https://schema.org",
    "@type": "ItemList",
    name: "Landscaping project profiles",
    itemListElement: projectProfiles.map((project, index) => ({
      "@type": "ListItem",
      position: index + 1,
      name: project.title,
      description: project.summary,
    })),
  },
];
---

<Layout
  title={pageTitle}
  description={metaDescription}
  canonicalUrl={canonicalUrl}
  structuredData={structuredData}
  quoteHref="/#quote"
  analytics={{
    pageGroup: "projects",
    pageType: "list",
    pageTemplate: "projects",
  }}
>
  <section class="section">
    <div class="mx-auto max-w-6xl px-5 sm:px-6">
      <div class="max-w-3xl space-y-4">
        <p class="section-kicker">Project profiles</p>
        <h1 class="section-title">Landscaping projects we are built to handle.</h1>
        <p class="text-sm text-ink-soft sm:text-base">
          These profiles show the kind of higher-value work we quote and complete most often across
          lower-mid Vancouver Island, from driveway correction to full-property resets.
        </p>
      </div>
    </div>
  </section>

  <section class="section pt-0">
    <div class="mx-auto max-w-6xl px-5 sm:px-6">
      <div class="grid gap-5 lg:grid-cols-2">
        {projectProfiles.map((project, index) => (
          <article
            class="rounded-2xl border border-border bg-white/90 p-6 shadow-fine animate-rise"
            style={`animation-delay: ${index * 80}ms`}
          >
            <p class="text-2xl font-display">{project.title}</p>
            <p class="mt-2 text-sm text-ink-soft">{project.summary}</p>
            <div class="mt-5 grid gap-4 sm:grid-cols-2">
              <div class="rounded-xl border border-border bg-white/80 p-4">
                <p class="text-xs uppercase tracking-[0.25em] text-ink-soft">Ideal for</p>
                <p class="mt-2 text-sm text-ink">{project.idealFor}</p>
              </div>
              <div class="rounded-xl border border-border bg-white/80 p-4">
                <p class="text-xs uppercase tracking-[0.25em] text-ink-soft">Typical timeline</p>
                <p class="mt-2 text-sm text-ink">{project.timeline}</p>
              </div>
            </div>
            <div class="mt-5">
              <p class="text-xs uppercase tracking-[0.25em] text-ink-soft">Scope includes</p>
              <ul class="mt-3 space-y-2 text-sm text-ink-soft">
                {project.scope.map((item) => (
                  <li class="flex gap-3">
                    <span class="mt-2 h-1.5 w-1.5 rounded-full bg-ink/70"></span>
                    {item}
                  </li>
                ))}
              </ul>
            </div>
            <div class="mt-5 flex flex-wrap gap-2">
              {project.relatedServiceHrefs.map((service) => (
                <a
                  class="rounded-full border border-border bg-white px-4 py-1.5 text-xs font-semibold uppercase tracking-[0.15em] text-ink-soft hover:border-ink hover:text-ink"
                  href={service.href}
                >
                  {service.label}
                </a>
              ))}
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section class="section pt-0">
    <div class="mx-auto max-w-6xl px-5 sm:px-6">
      <div class="rounded-2xl border border-border bg-ink px-6 py-10 text-paper shadow-soft sm:px-10">
        <p class="section-kicker text-paper/60">Ready to scope your project?</p>
        <h2 class="mt-2 text-3xl font-display text-paper sm:text-4xl">Call or text for a same-day quote.</h2>
        <p class="mt-3 max-w-2xl text-sm text-paper/80 sm:text-base">
          Tell us the property location and the result you want. We will confirm fit, timing, and next
          steps quickly.
        </p>
        <div class="mt-6 flex flex-wrap gap-3">
          <a
            class="rounded-full bg-paper px-6 py-3 text-sm font-semibold text-ink hover:bg-paper/90"
            href={`tel:${business.phoneTel}`}
            data-ga-event="cta_click"
            data-ga-label="projects_call"
          >
            Call or text {business.phone}
          </a>
          <a
            class="rounded-full border border-paper/40 px-6 py-3 text-sm font-semibold text-paper hover:border-paper"
            href="/#quote"
            data-ga-event="cta_click"
            data-ga-label="projects_quote"
          >
            Get a free quote
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
