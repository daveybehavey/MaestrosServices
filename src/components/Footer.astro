---
import { business } from "../data/business";

interface Props {
  includeMobilePadding?: boolean;
}

const { includeMobilePadding = true } = Astro.props;
---

<footer
  class:list={[
    "border-t border-border/70 bg-paper/80",
    includeMobilePadding && "pb-24 md:pb-0",
  ]}
>
  <div
    class="mx-auto flex max-w-6xl flex-wrap items-center justify-between gap-6 px-5 py-8 text-sm text-ink-soft sm:px-6 sm:py-10"
  >
    <div class="flex items-center gap-3">
      <div
        class="flex h-10 w-10 items-center justify-center rounded-full border border-ink/15 bg-white/90"
      >
        <img
          src="/logo.png?v=2"
          alt={`${business.name} logo`}
          class="h-6 w-6"
          width="24"
          height="24"
        />
      </div>
      <div class="space-y-1">
        <p class="text-base font-semibold text-ink">{business.name}</p>
        <p>Landscaping services across lower-mid Vancouver Island.</p>
      </div>
    </div>
    <div class="space-y-2">
      <p class="font-semibold text-ink">Explore</p>
      <a class="block hover:text-ink" href="/services">
        Services
      </a>
      <a class="block hover:text-ink" href="/projects">
        Projects
      </a>
      <a class="block hover:text-ink" href="/blog">
        Blog
      </a>
      <a class="block hover:text-ink" href="/driveway-faq">
        Driveway FAQ
      </a>
      <a class="block hover:text-ink" href="/service-area">
        Service Area
      </a>
    </div>
    <div class="space-y-2">
      <p class="font-semibold text-ink">Contact</p>
      <a class="block hover:text-ink" href={`tel:${business.phoneTel}`}>
        {business.phone}
      </a>
      <a class="block hover:text-ink" href={`mailto:${business.email}`}>
        {business.email}
      </a>
    </div>
  </div>
</footer>
